<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order_completion">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#0E68FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Order Completion ->"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="15dp"
            android:text="Fill out the details below"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/below"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/card_background"
        android:elevation="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/head">
        <ImageView
            android:id="@+id/last_carts_act"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/shopping_cart_24px"/>

        <EditText
            android:id="@+id/last_email_edit"
            android:maxLength="50"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:inputType="textNoSuggestions"
            android:hint="Enter Email"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/last_name_edit"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:maxLength="50"
            android:layout_marginTop="110dp"
            android:layout_centerHorizontal="true"
            android:inputType="textNoSuggestions"
            android:hint="Enter Name "
            tools:ignore="SpeakableTextPresentCheck" />
    <EditText
            android:id="@+id/last_address_edit"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:maxLength="50"
            android:layout_marginTop="170dp"
            android:layout_centerHorizontal="true"
            android:inputType="textNoSuggestions"
            android:hint="Enter Address "
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/confirm_order"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_below="@+id/last_name_edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/custom_button"
            android:text="Confirm Order"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:backgroundTint="#0E68FF" />

<!--Order reviewing-->
        <ImageView
            android:id="@+id/first_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_order"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_baseline_circle_24_grey" />

        <ImageView
            android:id="@+id/begin_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_dot"
            android:layout_marginLeft="27dp"
            android:src="@drawable/grey_vertical_line" />
        <ImageView
            android:id="@+id/begin_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_dot"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/grey_vertical_line" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/confirm_order"
            android:src="@drawable/order_review"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_order"
            android:text="Order is reviewing"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="170dp"/>

<!--order confirming column        -->
        <ImageView
            android:id="@+id/second_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_order"
            android:src="@drawable/ic_baseline_circle_24_grey"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="150dp"/>

        <ImageView
            android:id="@+id/end_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_dot"
            android:layout_marginLeft="27dp"
            android:src="@drawable/grey_vertical_line" />
        <ImageView
            android:id="@+id/end_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_dot"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/grey_vertical_line" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/confirm_order"
            android:src="@drawable/receipts"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="140dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_order"
            android:text="Order has been confirmed"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="170dp"/>


<!--Order placing-->
        <ImageView
            android:id="@+id/third_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_order"
            android:src="@drawable/ic_baseline_circle_24_grey"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="250dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/confirm_order"
            android:src="@drawable/order"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="240dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_order"
            android:text="Order is placed"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="180dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>