<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginVertical="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/last_item_img"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/toolbar1"/>

            <TextView
                android:id="@+id/last_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="Product Name"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/last_product_name"
                android:layout_width="250dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:layout_below="@id/last_product_title"
                android:fontFamily="@font/brawler"
                android:minHeight="48dp"
                android:text="Samsung 50AU7000 Crystal UHD 4K Smart LED TV"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/last_quantity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity : "
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="50dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/last_quantity_num"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:layout_toRightOf="@+id/last_quantity_name"/>

            <TextView
                android:id="@+id/last_price_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:text="Price : "
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/last_price_num"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Rs. 0"
                android:layout_toRightOf="@+id/last_price_name"/>

            <TextView
                android:id="@+id/last_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate : "
                android:textSize="15sp"
                android:layout_toLeftOf="@+id/last_item_img"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="80dp"
                android:textStyle="bold"/>

            <RatingBar
                android:id="@+id/last_ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                android:stepSize="0.1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingTop="2dp"
                android:layout_marginBottom="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="100dp"
                android:layout_alignParentRight="true"
                android:isIndicator="true"
                android:numStars="5" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>